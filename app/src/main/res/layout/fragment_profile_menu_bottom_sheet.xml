<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.profile.bottomsheet.ProfileMenuBottomSheet">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_archive_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/archive_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Archive"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/archive"
            app:layout_constraintStart_toEndOf="@id/archive"
            app:layout_constraintTop_toTopOf="@id/archive" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/your_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_your_activity_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/archive" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/your_activity_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Your Activity"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/your_activity"
            app:layout_constraintStart_toStartOf="@id/archive_txt"
            app:layout_constraintTop_toTopOf="@id/your_activity" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/nametag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_nametag_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/your_activity" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nametag_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Nametag"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/nametag"
            app:layout_constraintStart_toStartOf="@id/your_activity_txt"
            app:layout_constraintTop_toTopOf="@id/nametag" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_saved_menu"
            app:layout_constraintEnd_toEndOf="@id/nametag"
            app:layout_constraintStart_toStartOf="@id/nametag"
            app:layout_constraintTop_toBottomOf="@id/nametag" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/saved_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Saved"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/saved"
            app:layout_constraintStart_toStartOf="@id/nametag_txt"
            app:layout_constraintTop_toTopOf="@id/saved" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_close_friends_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/saved" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/close_friends_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Close Friends"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/close_friends"
            app:layout_constraintStart_toStartOf="@id/saved_txt"
            app:layout_constraintTop_toTopOf="@id/close_friends" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/discover_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_discover_people_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/close_friends" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/discover_people_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Discover People"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/discover_people"
            app:layout_constraintStart_toStartOf="@id/close_friends_txt"
            app:layout_constraintTop_toTopOf="@id/discover_people" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/open_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_open_facebook_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discover_people" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/open_facebook_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Open Facebook"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/open_facebook"
            app:layout_constraintStart_toStartOf="@id/discover_people_txt"
            app:layout_constraintTop_toTopOf="@id/open_facebook" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_settings_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/open_facebook" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/settings_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/settings"
            app:layout_constraintStart_toStartOf="@id/open_facebook_txt"
            app:layout_constraintTop_toTopOf="@id/settings" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>



















